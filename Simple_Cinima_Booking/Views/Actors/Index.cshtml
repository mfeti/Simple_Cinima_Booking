@model List<Actor>
@{
	ViewData["Title"] = "List of Actors";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>Profile picture</th>
					<th>Full Name</th>
					<th>Biography</th>
					@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
					{
						<th>Actions</th>
					}
				</tr>
			</thead>
			<tbody>
				
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.ProfilePictureUrl" alt="@item.FullName" style="width:100px;">
						<td class="align-middle">@item.FullName</td>
						<td class="align-middle">@item.Bio</td>
							@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
							{
							<td class="align-middle">
								<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>|
								<a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>|
								<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>
							</td>
							}

					</tr>
					
				}
			</tbody>
		</table>
	</div>
</div>

@await Html.PartialAsync("_CreateItem", "Actors")